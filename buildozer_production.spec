[app]

# ============================================================================
# БАЗОВАЯ ИНФОРМАЦИЯ О ПРИЛОЖЕНИИ
# ============================================================================

# Название приложения (отображается на устройстве)
title = Snake Game Pro

# Имя пакета (используется в Android package name)
package.name = snakegamepro

# Домен (формат reverse DNS)
package.domain = com.snakegame

# Версия приложения (отображается в Play Store)
version = 1.0.0

# ============================================================================
# ИСХОДНЫЙ КОД И РЕСУРСЫ
# ============================================================================

# Директория с исходным кодом
source.dir = .

# Entry point файл для Android
source.include_exts = py,png,jpg,kv,atlas,json,mp3,wav,txt

# Главный файл приложения (точка входа)
source.main = main_android.py

# ============================================================================
# ЗАВИСИМОСТИ PYTHON
# ============================================================================

# Основные зависимости для Kivy-версии игры
# ВАЖНО: Используем только Kivy, без pygame для Android
requirements = python3==3.10,kivy==2.2.1,pyjnius,requests,pillow

# Модули Kivy Garden (если нужны)
garden_requirements =

# ============================================================================
# НАСТРОЙКИ PYTHON-FOR-ANDROID
# ============================================================================

# Ветка python-for-android
p4a.branch = master

# Локальный рецепт для p4a (если нужно)
# p4a.local_recipes = ./p4a-recipes

# Bootstrap (по умолчанию sdl2 для Kivy)
p4a.bootstrap = sdl2

# ============================================================================
# ГРАФИЧЕСКИЕ РЕСУРСЫ
# ============================================================================

# Сплэш-экран (создадим позже, если нужно)
# presplash.filename = %(source.dir)s/assets/splash.png

# Иконка приложения
# icon.filename = %(source.dir)s/assets/icon.png

# Ориентация экрана (portrait/landscape/sensor)
orientation = portrait

# Полноэкранный режим
fullscreen = 1

# ============================================================================
# ANDROID НАСТРОЙКИ
# ============================================================================

# Разрешения Android
android.permissions = INTERNET,ACCESS_NETWORK_STATE,WRITE_EXTERNAL_STORAGE,READ_EXTERNAL_STORAGE

# Целевая версия Android API (Android 12)
android.api = 31

# Минимальная поддерживаемая версия API (Android 5.0)
android.minapi = 21

# Версия NDK (гарантированно стабильная)
android.ndk = 25b

# NDK API level
android.ndk_api = 21

# Путь к NDK (автоопределение)
# android.ndk_path =

# Путь к SDK (автоопределение)
# android.sdk_path =

# ============================================================================
# СБОРКА И ОПТИМИЗАЦИЯ
# ============================================================================

# Архитектуры процессоров (современный 64-бит ARM)
android.archs = arm64-v8a,armeabi-v7a

# Приватное хранилище
android.private_storage = True

# Копировать библиотеки в APK
android.copy_libs = 1

# Wakelock (не давать устройству засыпать)
android.wakelock = True

# Мета-данные приложения
android.meta_data = 

# Библиотеки для загрузки
android.add_libs =

# Активности для добавления
android.add_activities =

# Сервисы для добавления
# android.add_services =

# Gradle зависимости
# android.gradle_dependencies =

# ============================================================================
# LOGCAT И ОТЛАДКА
# ============================================================================

# Фильтры logcat (для отладки)
android.logcat_filters = *:S python:D

# Разрешить резервное копирование
android.allow_backup = True

# ============================================================================
# KIVY СПЕЦИФИЧНЫЕ НАСТРОЙКИ
# ============================================================================

# Требуемая версия Kivy
kivy.require = 2.2.1

# Отключить SVG поддержку (экономия размера APK)
kivy.graphics.svg = 0

# ============================================================================
# BUILDOZER НАСТРОЙКИ
# ============================================================================

[buildozer]

# Уровень логирования (0=error, 1=info, 2=debug)
log_level = 2

# Предупреждение при запуске от root
warn_on_root = 1

# Путь к bin директории (автоопределение)
# bin_dir = 

